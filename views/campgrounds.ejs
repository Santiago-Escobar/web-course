<%- include('partials/header') %>




<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our something</p>
            <p>
                <a class="btn btn-dark btn-lg" href="/campgrounds/new"> Add new campground</a>
            </p>
        </div>
    </header>
    <div class="row">
        <% campgrounds.forEach(function(campgrounds){ %>
        <div class="col-md-3 col-sm-6">
            <div>
                <img src="<%= campgrounds.image %>" class="img-thumbnail" alt="image of campground">
                <div class="caption">
                    <h4><%= campgrounds.name %></h4>
                </div>
            </div>
        </div>

        <% }) %>
    </div>

</div>

<%- include('partials/footer') %>